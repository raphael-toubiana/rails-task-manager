<h1> My tasks </h1>
<hr>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li><i class="fas fa-check-square"></i><%= link_to task.title, task_path(task)%> </li>
    <% else %>
      <li><%= link_to task.title, task_path(task)%> </li>
    <% end %>
  <%end%>
</ul>
<hr>
<%= link_to 'Add a new task', new_task_path%>
